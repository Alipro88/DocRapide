{% extends 'base.html.twig' %}

{% block title %}Login Patient{% endblock %}

{% block body %}
<div id="wrapper">
        <!-- Content-->
        <div class="content">

        <div class="main-register-holder">
            <div class="main-register fl-wrap">
               
                <h3>Se connecter à <span>SOS<strong>MedecinMaroc</strong></span></h3>
                <div id="tabs-container">
                    
                    <div class="tab">
                        <div id="tab-1" class="tab-content">
                            <div class="custom-form">
                                {% if hasError %}
                                   <div class="alert alert-danger" role="alert"> Une erreur est survenue, le nom d'utilisation 
                                       ou le mot de passe est invalide </div>
                                {% endif %}
                                <form action="{{path('connect_patient')}}" method="post" >
                                    <label>Adresse Email  * </label>
                                    <input name="_username" type="email" id="email"  onClick="this.select()" value="">
                                    <label >Mot de passe * </label>
                                    <input name="_password" type="password"  onClick="this.select()" value="" >
                                    <button type="submit"  class="log-submit-btn"><span>Log In</span></button>
                                    <div class="clearfix"></div>
                                </form>
                                <div class="tab-content">
                                    <a href="#">Mot de passe oublié?</a>
                                </div>
                            </div>
                        </div>
                        <div class="tab">
                            <div id="tab-2" class="tab-content">
                                      
                                <div class="custom-form">
                                          
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="main-register-holder">
            <div class="main-register fl-wrap">
                <h3>Nouveau sur SOS Medecin Maroc ?</h3>
                <div class="col">
                    <a class="col bold" style="font-weight: 700;
                    font-size: 19px;
                    color: #4DB7FE;" href="#">S'inscrire</a>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
